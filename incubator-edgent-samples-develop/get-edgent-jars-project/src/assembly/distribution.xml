<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <!--
    NOTE: each platform (platforms/java7 and platforms/android) have their
    own distribution project and a copy of this configuration file that
    must be manually kept in sync. 
   -->
   
  <id>bin</id>

  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}/META-INF</directory>
      <includes>
        <include>DISCLAIMER</include>
        <include>DEPENDENCIES</include>
      </includes>
      <outputDirectory/>
    </fileSet>

    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <includes>
        <include>README</include>
      </includes>
      <outputDirectory/>
    </fileSet>

  </fileSets>

  <dependencySets>
    <!-- Any edgent libs -->
    <dependencySet>
      <outputDirectory>libs</outputDirectory>
      <scope>runtime</scope>
      <includes>
        <include>org.apache.edgent*</include>
      </includes>
      <excludes>
        <exclude>org.apache.edgent*:get-edgent-jars-project</exclude>
      </excludes>
    </dependencySet>

    <!-- All other libs are treated as external libs -->
    <dependencySet>
      <outputDirectory>ext</outputDirectory>
      <scope>runtime</scope>
      <excludes>
        <exclude>org.apache.edgent*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

</assembly>
